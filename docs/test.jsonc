{
  // Server configuration
  "server": {
    "host": "localhost",
    "port": 8080,
    "ssl": true,  // Enable SSL by default
    /* Multi-line comment
       for additional configuration
       options */
    "timeout": 30000
  },
  // Database settings
  "database": {
    "connections": [
      {
        "name": "primary",
        "host": "db1.example.com",
        "port": 5432
      },
      {
        "name": "replica",  // Read-only replica
        "host": "db2.example.com",
        "port": 5432
      }
    ],
    "pool": {
      "min": 2,
      "max": 10
    }
  },
  // Feature flags
  "features": {
    "authentication": true,
    "logging": true,
    "metrics": {
      "enabled": true,
      "providers": ["prometheus", "datadog"]
    }
  },
  // API endpoints
  "endpoints": [
    "/api/users",
    "/api/posts",  // Public endpoint
    "/api/admin"   // Requires authentication
  ]
}
